<Window x:Class="KoloskovLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloskovLanguage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="res/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#FFE7FABF"/>
        <Border Grid.Row="2" Background="#FFE7FABF"/>
        <Image Source="res/school_logo.png" Grid.Row="0" HorizontalAlignment="Left"/>
        <TextBlock Text="Языковая школа" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="34"/>
        <Button Name="BtnBack" Content="Назад" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="BtnBack_Click"/>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"/>
    </Grid>
</Window>
